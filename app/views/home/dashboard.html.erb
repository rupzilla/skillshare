<div class="span3">
	
<h3>My Dashboard</h3>
<hr>

<p><b> Name: </b><%= current_user.proper_name %></p>
<p><b> Interests: </b><%= current_user.interests %></p>
<% unless current_user.major.nil? %>
	<p><b> Major: </b><%= current_user.major %></p>
<% end %>

<%= link_to raw("<i class='icon-pencil'></i> Edit my info"), edit_user_path(current_user) %>




<br>
<br>
<br>


</div>
<div class="span1"></div>

<div class="span8">

	
	<br>
	
	<% if current_user.is_sharer? && !current_user.has_workshop? %>
		
		<h4> You are currently not teaching a workshop. </h4>

		<%= link_to raw("Create A Workshop"), new_workshop_path, :class => 'btn btn-small btn-success' %>
		
	<% elsif current_user.is_sharer? && current_user.has_workshop?%>
		
		<%= render :partial => "workshops_teaching" %>
		
		
		
	<%else%>
			
		<h4> You're not a tutor! You can't teach yet! </h4>
		<%= link_to raw("Become a tutor"), new_sharer_path, :class => 'btn btn-small btn-success' %>
		
	<%end%>
	<br>

	<br>


	<% if current_user.workshop_subscriptions.size >0 %>
	
	<%= render :partial => "subscribed_to" %>
	
	<% else %>
	
	<h4>
	 Sign up for a workshop! <%= link_to raw("<i class='icon-plus'></i>"), workshops_path %></h4>
	<br>
	
	<% end %>


</div>
