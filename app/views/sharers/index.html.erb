<div class="span10">

<h1> Tutors</h1>
<br>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Credentials</th>
    <th>Major</th>

  </tr>

<% @sharers.each do |sharer| %>
  <tr>
    <td><%= link_to sharer.proper_name, sharer_path(sharer.id)%></td>
    <td><%= sharer.credentials %></td>
    <td><%= sharer.major %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to raw("Become a Tutor!"), new_sharer_path, :class => 'btn btn-small btn-success' %></p>
</div>
